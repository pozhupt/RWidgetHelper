<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccc">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <com.ruffian.library.widget.RTextView
            android:id="@+id/tv"
            style="@style/itemMain"
            android:text="RTextView" />

        <com.ruffian.library.widget.RTextView
            android:id="@+id/iv"
            style="@style/itemMain"
            android:layout_marginTop="12dp"
            android:text="RImageView" />

        <com.ruffian.library.widget.RTextView
            android:id="@+id/et"
            style="@style/itemMain"
            android:layout_marginTop="12dp"
            android:text="REditText" />

        <com.ruffian.library.widget.RTextView
            android:id="@+id/view_group"
            style="@style/itemMain"
            android:layout_marginTop="12dp"
            android:text="RViewGroup" />

        <com.ruffian.library.widget.RTextView
            android:id="@+id/view"
            style="@style/itemMain"
            android:layout_marginTop="12dp"
            android:text="RView" />

        <com.ruffian.library.widget.RTextView
            android:id="@+id/gradient"
            style="@style/itemMain"
            android:layout_marginTop="12dp"
            android:text="Gradient" />

        <com.ruffian.library.widget.RTextView
            android:id="@+id/checked"
            style="@style/itemMain"
            android:layout_marginTop="12dp"
            android:text="Checked"
            app:background_normal="@color/colorPrimary"
            app:background_pressed="@color/colorPrimaryDark"
            app:corner_radius="6dp" />

        <com.ruffian.library.widget.RTextView
            android:id="@+id/ripper"
            style="@style/itemMain"
            android:layout_marginTop="12dp"
            android:text="Ripper" />

        <com.ruffian.library.widget.RTextView
            android:id="@+id/shadow"
            style="@style/itemMain"
            android:layout_marginTop="12dp"
            android:text="Shadow" />
    </LinearLayout>

</ScrollView>
