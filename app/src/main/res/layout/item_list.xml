<?xml version="1.0" encoding="utf-8"?>
<com.ruffian.library.widget.RLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.ruffian.library.widget.RLinearLayout
        android:id="@+id/layout_ll"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        app:background_normal="#cc3"
        app:corner_radius="6dp"
        app:shadow_color="#E91E63"
        app:shadow_dx="5dp"
        app:shadow_dy="5dp"
        app:shadow_radius="20dp">

        <com.ruffian.library.widget.RTextView
            android:id="@+id/tv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:gravity="center_vertical"
            android:padding="2dp"
            android:text="@string/app_name" />

    </com.ruffian.library.widget.RLinearLayout>

</com.ruffian.library.widget.RLinearLayout>